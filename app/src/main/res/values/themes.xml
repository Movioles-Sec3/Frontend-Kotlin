<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Modo Día) con Material 3 -->
    <style name="Theme.TapToast" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colores de la marca (día) -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <!-- En M3, el "Variant" se mapea a "Container" -->
        <item name="colorPrimaryContainer">@color/color_primary_variant</item>

        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorSecondaryContainer">@color/color_secondary_variant</item>

        <!-- Fondos / Superficies (día) -->
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>

        <!-- Status bar (en M3 se recomienda usar superficie + iconos oscuros en modo claro) -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
