<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analytics de Favoritos"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vista de desarrollador"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Card principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#2a2a2a"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estadísticas Generales"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_total_favorites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total de favoritos: 0"
                    android:textSize="16sp"
                    android:textColor="#cccccc"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_average_per_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Promedio: 0 favoritos por día"
                    android:textSize="16sp"
                    android:textColor="#cccccc"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de frecuencia -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#2a2a2a"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comportamiento de Compra"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_add_from_favorites_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregados al carrito desde Favoritos: 0"
                    android:textSize="16sp"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_add_from_products_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregados al carrito desde Productos: 0"
                    android:textSize="16sp"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#444444"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:id="@+id/tv_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia: 0% desde Favoritos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFC107"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de metadata -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2a2a2a"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_last_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actualizado: --"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Actualizar"
                android:textColor="#ffffff"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_close"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Cerrar"
                android:textColor="#ffffff"
                android:backgroundTint="#666666"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>

