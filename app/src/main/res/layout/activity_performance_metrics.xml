<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Métricas de Rendimiento"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comparación: Carga Paralela vs. Secuencial"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- Área del reporte -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📈 Reporte de Rendimiento"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tv_performance_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando métricas..."
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="3dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Información adicional -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E8F5E9"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💡 ¿Qué significan las métricas?"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 P50 (mediana): El 50% de las cargas son más rápidas que este tiempo\n\n📊 P95: El 95% de las cargas son más rápidas que este tiempo (incluye casos lentos)\n\n🚀 Carga PARALELA es mejor cuando: El catálogo e imágenes se descargan al mismo tiempo, aprovechando múltiples conexiones simultáneas. Ideal con buena conexión Wi-Fi.\n\n📦 Carga SECUENCIAL es mejor cuando: El dispositivo tiene recursos limitados o conexión inestable. Primero muestra el menú, luego carga imágenes en segundo plano."
                    android:textSize="12sp"
                    android:textColor="#2E7D32"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botones -->
        <Button
            android:id="@+id/btn_refresh_metrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Actualizar Métricas"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_clear_metrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗑️ Limpiar Métricas"
            android:textSize="16sp"
            android:padding="12dp"
            android:backgroundTint="#F44336"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⬅️ Volver"
            android:textSize="16sp"
            android:padding="12dp"
            android:backgroundTint="#757575" />

    </LinearLayout>

</ScrollView>
