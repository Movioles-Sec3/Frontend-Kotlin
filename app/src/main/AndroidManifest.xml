<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos para Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permiso para vibraci칩n -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Permiso para cambiar configuraci칩n de red (opcional, para debug) -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <!-- Permisos para c치mara -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TapToast"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- LoginActivity como actividad de lanzamiento -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <!-- CategoryActivity -->
        <activity
            android:name=".CategoryActivity"
            android:exported="true" />

        <!-- ProductActivity -->
        <activity
            android:name=".ProductActivity"
            android:exported="true" />

        <!-- OrderSummaryActivity -->
        <activity
            android:name=".OrderSummaryActivity"
            android:exported="true" />

        <!-- OrderPickupActivity -->
        <activity
            android:name=".OrderPickupActivity"
            android:exported="true" />

        <!-- OrderHistoryActivity -->
        <activity
            android:name=".OrderHistoryActivity"
            android:exported="false" />

        <!-- FavoritosActivity -->
        <activity
            android:name=".FavoritosActivity"
            android:exported="false" />

        <!-- FavoritesAnalyticsActivity -->
        <activity
            android:name=".FavoritesAnalyticsActivity"
            android:exported="false" />

        <!-- StaffValidationActivity -->
        <activity
            android:name=".StaffValidationActivity"
            android:exported="false" />

        <!-- ProfileActivity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- PerformanceMetricsActivity -->
        <activity
            android:name=".PerformanceMetricsActivity"
            android:exported="false" />

        <!-- LocalStorageDebugActivity -->
        <activity
            android:name=".LocalStorageDebugActivity"
            android:exported="false" />

        <!-- CalificarOrdenActivity -->
        <activity
            android:name=".CalificarOrdenActivity"
            android:exported="false" />

        <!-- UserInsightsActivity -->
        <activity
            android:name=".UserInsightsActivity"
            android:exported="false" />

        <!-- MainActivity (mantenemos por compatibilidad) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- FileProvider para compartir archivos de forma segura (c치mara) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>