<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos para Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permiso para vibración -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Permiso para cambiar configuración de red (opcional, para debug) -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TapToast"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- LoginActivity como actividad de lanzamiento -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <!-- CategoryActivity -->
        <activity
            android:name=".CategoryActivity"
            android:exported="true" />

        <!-- ProductActivity -->
        <activity
            android:name=".ProductActivity"
            android:exported="true" />

        <!-- OrderSummaryActivity -->
        <activity
            android:name=".OrderSummaryActivity"
            android:exported="true" />

        <!-- OrderPickupActivity -->
        <activity
            android:name=".OrderPickupActivity"
            android:exported="true" />

        <!-- OrderHistoryActivity -->
        <activity
            android:name=".OrderHistoryActivity"
            android:exported="false" />

        <!-- StaffValidationActivity -->
        <activity
            android:name=".StaffValidationActivity"
            android:exported="false" />

        <!-- MainActivity (mantenemos por compatibilidad) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>