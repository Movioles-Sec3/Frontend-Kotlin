<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Success Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="?attr/colorPrimary"
            android:layout_marginBottom="24dp"
            android:contentDescription="Success icon" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Completed!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show this code at pickup"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="32dp" />

        <!-- QR Code Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="2dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Code"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="8dp" />

                <!-- QR Code Image -->
                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    android:contentDescription="QR Code for order pickup"
                    android:layout_marginBottom="16dp" />

                <!-- QR Code Text (for copy functionality) -->
                <TextView
                    android:id="@+id/tv_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC123XYZ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="16dp"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutline"
                    android:layout_marginVertical="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_compra_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#12345"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_estado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAID"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Card de Control de Estado (Staff) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_estado_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSecondaryContainer"
            android:layout_marginBottom="16dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”§ Staff Control Panel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use these buttons to update the order status"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:layout_marginBottom="16dp" />

                <!-- BotÃ³n: Marcar como En PreparaciÃ³n -->
                <Button
                    android:id="@+id/btn_en_preparacion"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Mark In Preparation"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp" />

                <!-- BotÃ³n: Marcar como Listo -->
                <Button
                    android:id="@+id/btn_listo"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Mark as Ready"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp" />

                <!-- BotÃ³n: Escanear QR / Entregar -->
                <Button
                    android:id="@+id/btn_escanear_qr"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Scan QR &amp; Deliver"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Copy Button -->
        <Button
            android:id="@+id/btn_copy_code"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy Code"
            android:layout_marginBottom="8dp" />

        <!-- Back to Order History Button -->
        <Button
            android:id="@+id/btn_back_to_history"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Order History"
            android:layout_marginBottom="8dp" />

        <!-- Back to Home Button -->
        <Button
            android:id="@+id/btn_back_to_home"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Home" />

    </LinearLayout>
</ScrollView>
