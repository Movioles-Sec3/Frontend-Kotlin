<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/color_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <Button
        android:id="@+id/btn_categories"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="@string/categories_button"
        android:textColor="@color/color_on_primary"
        android:backgroundTint="@color/color_primary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <Button
        android:id="@+id/btn_products"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="@string/products_button"
        android:textColor="@color/color_on_secondary"
        android:backgroundTint="@color/color_secondary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_order_summary"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="@string/order_summary_button"
        android:textColor="@color/color_on_primary"
        android:backgroundTint="@color/color_primary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_products"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_order_pickup"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="@string/order_pickup_button"
        android:textColor="@color/color_on_secondary"
        android:backgroundTint="@color/color_secondary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_order_summary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
