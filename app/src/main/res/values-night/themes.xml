<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Modo Noche) con Material 3 -->
    <style name="Theme.TapToast" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colores de la marca (noche) -->
        <item name="colorPrimary">#8F7BFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- En M3, usa "Container" en vez de "Variant" -->
        <item name="colorPrimaryContainer">#5A3FFF</item>

        <item name="colorSecondary">#FF9E80</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryContainer">#FF7F50</item>

        <!-- Fondos / Superficies (noche) -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <!-- Status bar (superficie y sin iconos claros en noche) -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
